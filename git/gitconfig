[user]
	name = Debajit Adhikary
	email = [ENTER EMAIL ADDRESS HERE]
[alias]
	br = branch
	co = checkout
	di = diff
	ds = diff --staged
	dt = difftool
	st = status
	lg = log --graph --pretty=format:'%C(bold magenta)%h%Creset %C(bold yellow)%d%C(reset) %s %C(bold green)(%cr) %C(bold cyan)<%an>%Creset' --abbrev-commit
	tip = show head --name-status --abbrev-commit --date=relative
[color]
    ui = auto
[color "branch"]
	current = bold green
[color "status"]
	added = bold red
	updated = bold green
	changed = bold red
	untracked = bold red
	nobranch = bold red
[log]
	decorate = full
[difftool]
	prompt = false
[difftool "Kaleidoscope"]
	cmd = ksdiff --partial-changeset --relative-path \"$MERGED\" -- \"$LOCAL\" \"$REMOTE\"
[diff]
	tool = Kaleidoscope
[mergetool "Kaleidoscope"]
	cmd = ksdiff --merge --output \"$MERGED\" --base \"$BASE\" -- \"$LOCAL\" --snapshot \"$REMOTE\" --snapshot
	trustExitCode = true
[mergetool]
	prompt = false
[merge]
	tool = Kaleidoscope
