[user]
	name = Debajit Adhikary
	email = [ENTER EMAIL ADDRESS HERE]
[alias]
	a = commit --amend --no-edit
	af = commit --amend -F
	b = branch
	ba = branch -a
	bd = branch -d
	bm = branch --move
	c = checkout
	cb = checkout -b
	ci = commit
	cia = commit --amend
	cif = commit -F
	ciaf = commit --amend -F
	cian = commit --amend --no-edit
	cp = cherry-pick
	cv = cherry -v
	d = diff
	dm = !sh -c 'git ls-files -m $1 | xargs git diff' -
	dh = diff head
	dh1 = diff head~1
	dh2 = diff head~2
	dp = !sh -c 'git diff "$1~1" "$1"' -
	ds = diff --staged
	dt = difftool
	dtm = !sh -c 'git ls-files -m $1 | xargs git difftool' -
	dth = difftool head
	dth1 = difftool head~1
	dth2 = difftool head~2
	dtp = !sh -c 'git difftool "$1~1" "$1"' -
	dts = difftool --staged
	findfile = ls-files
	f = ls-files
	grep-code-pattern = grep --ignore-case --line-number
	g = grep --ignore-case --line-number
	grep-code-string = grep --ignore-case --line-number -F
	gs = grep --ignore-case --line-number -F
	gf = !sh -c 'git g $1 -- $2' -
	gw = grep --ignore-case --line-number --word-regexp
	gwf = !sh -c 'git gw $1 -- $2' -
	m = merge
	mff = merge --ff-only
	mt = mergetool
	r = rebase
	rc = rebase --continue
	ri = rebase -i
	incoming = log ..@{u} --name-status --abbrev-commit --date=relative
	in = log ..@{u} --name-status --abbrev-commit --date=relative
	outgoing = log @{u}.. --name-status --abbrev-commit --date=relative
	out = log @{u}.. --name-status --abbrev-commit --date=relative
	outp = log @{u}.. -p --abbrev-commit --date=relative
	s = status
	sn = status -uno
	l = log --graph --pretty=format:'%C(bold magenta)%h%Creset %C(bold yellow)%d%C(reset) %s %C(bold green)(%cr) %C(bold cyan)<%an>%Creset' --abbrev-commit
	ll = log --name-status --abbrev-commit --date=relative
	l1 = log -1 --abbrev-commit --date=relative
	grep-commit-pattern = !sh -c 'git ll -i --grep=$1' -
	lg = !sh -c 'git ll -i --grep=$1' -
	grep-commit-string = !sh -c 'git ll -i -F --grep=\"$1\"' -
	lgs = !sh -c 'git ll -i -F --grep=\"$1\"' -
	la = !sh -c 'git ll -i --author=$1' -
	lag = !sh -c 'git ll -i --author=$1 --grep=$2' -
	lags = !sh -c 'git ll -i --author=$1 -F --grep=\"$2\"' -
	tip = log -1 --abbrev-commit --date=relative
	ub = !sh -c 'git fetch origin && git b -f master origin/master && git r master'
	ubt = !sh -c 'git fetch origin && git b -f master $1 && git r master' -
	um = !sh -c 'git fetch origin && git r origin/master'
	umt = !sh -c 'git fetch origin && git r $1' -
[color]
	ui = auto
[color "branch"]
	current = bold cyan
	local = bold yellow
	remote = bold red
[color "diff"]
	meta = cyan bold
	frag = magenta bold
	old = red bold
	new = green bold
	whitespace = white reverse
[color "status"]
	added = bold red
	updated = bold green
	changed = bold red
	untracked = bold red
	nobranch = bold red
[log]
	decorate = full
[difftool]
	prompt = false
[difftool "Kaleidoscope"]
	cmd = ksdiff --partial-changeset --relative-path \"$MERGED\" -- \"$LOCAL\" \"$REMOTE\"
[diff]
	tool = Kaleidoscope
[mergetool "Kaleidoscope"]
	cmd = ksdiff --merge --output \"$MERGED\" --base \"$BASE\" -- \"$LOCAL\" --snapshot \"$REMOTE\" --snapshot
	trustExitCode = true
[mergetool]
	prompt = false
[merge]
	tool = Kaleidoscope
[push]
	default = simple
