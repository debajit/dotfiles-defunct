[user]
	name = Debajit Adhikary
	email = [ENTER EMAIL ADDRESS HERE]
[alias]
	b = branch
	bm = branch --move
	c = checkout
	cb = checkout -b
	ci = commit
	cia = commit --amend
	cif = commit -F
	ciaf = commit --amend -F
	d = diff
	dh = diff head
	dh1 = diff head~1
	dh2 = diff head~2
	dp = !sh -c 'git diff "$1~1" "$1"' -
	ds = diff --staged
	dt = difftool
	dth = difftool head
	dth1 = difftool head~1
	dth2 = difftool head~2
	dtp = !sh -c 'git difftool "$1~1" "$1"' -
	dts = difftool --staged
	findfile = ls-files
	f = ls-files
	g = grep --ignore-case --line-number
	gg = !sh -c 'git g $1 -- $2' -
	m = merge
	mff = merge --ff-only
	mt = mergetool
	r = rebase
	rc = rebase --continue
	in = log ..origin/master --name-status --abbrev-commit --date=relative
	incoming = log ..origin/master --name-status --abbrev-commit --date=relative
	out = log origin/master.. --name-status --abbrev-commit --date=relative
	outgoing = log origin/master.. --name-status --abbrev-commit --date=relative
	tip = show head --name-status --abbrev-commit --date=relative
	s = status
	sn = status -uno
	l = log --graph --pretty=format:'%C(bold magenta)%h%Creset %C(bold yellow)%d%C(reset) %s %C(bold green)(%cr) %C(bold cyan)<%an>%Creset' --abbrev-commit
	ll = log --name-status --abbrev-commit --date=relative
[color]
	ui = auto
[color "branch"]
	current = bold green
[color "status"]
	added = bold red
	updated = bold green
	changed = bold red
	untracked = bold red
	nobranch = bold red
[log]
	decorate = full
[difftool]
	prompt = false
[difftool "Kaleidoscope"]
	cmd = ksdiff --partial-changeset --relative-path \"$MERGED\" -- \"$LOCAL\" \"$REMOTE\"
[diff]
	tool = Kaleidoscope
[mergetool "Kaleidoscope"]
	cmd = ksdiff --merge --output \"$MERGED\" --base \"$BASE\" -- \"$LOCAL\" --snapshot \"$REMOTE\" --snapshot
	trustExitCode = true
[mergetool]
	prompt = false
[merge]
	tool = Kaleidoscope
